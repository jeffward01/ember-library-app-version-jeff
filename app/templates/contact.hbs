<div class="page-header">
	<h1>Contact Us<small>  All your questions answered</small></h1>
</div>
<div class="container">
	{{#if contactFormSubmittedMessage}}
	<div class="alert alert-success">{{contactFormSubmittedMessage}}</div>
	{{/if}}
	<form class="well form-horizontal" action=" " method="post"  id="contact_form">
		<fieldset>
			<!-- Form Name -->
			<!-- <legend>Contact Us Today!</legend> -->
			<!-- Text input-->
			<div class="form-group">
				<label class="col-md-4 control-label">First Name</label>
				<div class="col-md-4 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						{{input name="email" value=contactForm.firstName  placeholder="First Name" class="form-control"  type="text" autofocus="autofocus"}}
					</div>
				</div>
			</div>
			<!-- Text input-->
			<div class="form-group">
				<label class="col-md-4 control-label">E-Mail</label>
				<div class="col-md-4 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
			{{input type="email" value=contactForm.emailAddress class="form-control" placeholder="Please type your e-mail address."}}
					</div>
				</div>
			</div>
			<!-- Text input-->
			
			<div class="form-group">
				<label class="col-md-4 control-label">Phone #</label>
				<div class="col-md-4 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
						{{input name="phone"  value=contactForm.phoneNumber placeholder="(845)555-1212" class="form-control" type="text"}}
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label">Message</label>
				<div class="col-md-4 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
						{{textarea class="form-control la-textArea" placeholder="Your message. (At least 5 characters.)" rows="4"  value=contactForm.message}}
					</div>
				</div>
			</div>
			<!-- Success message -->
			<!-- <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div> -->
			<!-- Button -->
			<div class="form-group">
				<label class="col-md-4 control-label"></label>
				<div class="col-md-4">
					<button type="button" disabled={{validEmail}}  class="btn btn-warning" {{action 'saveContactMessage'}}>Send <span class="glyphicon glyphicon-send"></span></button>
				</div>
			</div>
		</fieldset>
	</form>
</div>